<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/cookingImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/two_round_bg"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/cooking_img" />

        <TextView
            android:id="@+id/converoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/cookingImageView"
            android:layout_alignTop="@id/cookingImageView"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:text="Converoâ„¢"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/converoText"
            android:layout_alignStart="@id/converoText"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="Conversion\nis Easy With\nConvero."
            android:textColor="@color/white"
            android:textSize="36sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cooking_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F2EDED"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardMaxElevation="2dp"
            app:cardElevation="2dp"
            android:translationZ="2dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_steak"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:text="Cooking\nConversion" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/temp_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="#F2EDED"
            android:padding="20dp"
            app:cardMaxElevation="2dp"
            app:cardElevation="2dp"
            android:translationZ="2dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_temp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:text="Temperature\nConversion" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>