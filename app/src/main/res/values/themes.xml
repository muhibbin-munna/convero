<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConversionApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:textSize">@dimen/bodyText</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="InputButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="InputButtonsLand">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="CustomButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="CustomButtonsLand">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    <style name="Divider_ver">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Col">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DecimalInput">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DecimalInput2">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="UnitDropdown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
    </style>
    <style name="NavStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textSize">14dp</item>
    </style>
</resources>